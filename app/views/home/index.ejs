
<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="author" content="Mayk HSM - mayk.hsmdeveloper@gmail.com">
	<title>Blog Template - Mayk</title>
	<!-- Inclusão arquivos de estilo css -->
	<link href="/assets/css/bootstrap.css" rel="stylesheet">
	<link href="/assets/css/blog.css" rel="stylesheet">


	<!-- Inclusão arquivos js -->
	<script src="/assets/js/jquery.js"></script>
	<script src="/assets/js/bootstrap.js"></script>
	<script src="/assets/js/blog-general.js"></script>


</head>
<body>
	<section class="full-bg">
		<header class="blog-header py-3">
			<nav class="navbar navbar-light bg-light justify-content-between">
				<div class="col-4 d-flex justify-content-center align-items-center">
				</div>
				<div class="col-4 d-flex justify-content-center align-items-center">
					<a class="navbar-brand">Blog DSW</a>
				</div>
				<div class="col-4 d-flex justify-content-end align-items-center">
					<a class="btn btn-sm btn-outline-secondary" href="/cadastro/usuario">Subscribe</a>
					<a href="#" class="btn btn-sm btn-outline-secondary" data-toggle="modal" data-target="#login">Sign up</a>
				</div>
			</nav>
			<hr>
		</header>
		<section id="home-posts" class="mainPage">			
			<div class="row d-flex justify-content-center">
				<% for(let i=0; i < posts.length; i++) {%>
				<div class="card col-md-3 miniPost space-btw">					
					<div class="card-header">
						<h5 ><%= posts[i].TITULO %></h5>
					</div>
					<div class="card-body">
						<div class="row">
							<div class="col-md-5 space-btw">
								<% if(posts[i].IMAGE_PATH!=''){%>
								<img src="/dbImages/<%= posts[i].IMAGE_PATH %>" alt="Miniatura post" class="img-thumbnail">
								<%}else{%>
								<img src="/dbImages/Image-not-found.png" alt="Image not found" class="img-thumbnail">
								<%}%>
							</div>
							<div class="col-md-6 space-btw">		
								<div class="mb-auto resumo-post box box--fixed"><%= posts[i].POST %></div>
								<a href="/viewPost?id=<%= posts[i].ID %>" class="stretched-link">Continue reading</a>
							</div>
						</div>
					</div>
				</div>
				<% } %>
			</div>			
		</section>
	</section>
	<footer class="blog-footer">
	</footer>
	<div id="login" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-sm">
			<div class="modal-content">
				<div class="modal-header text-center">
					<h4 class="modal-title w-100 font-weight-bold">Login</h4>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<form action="/user/authenticate" method="post">
					<div class="modal-body">
						<div class="form-group">
							<label class="col-form-label">Email:</label>
							<input type="text" class="form-control" id="EMAIL" name="EMAIL">
						</div>
						<div class="form-group">
							<label class="col-form-label">Senha:</label>
							<input type="password" class="form-control" id="PASSWORD" name="PASSWORD">
						</div>

					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
						<button type="submit" class="btn btn-primary">Login</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</body>
</html>
